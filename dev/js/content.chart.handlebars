<!DOCTYPE html>
<html lang="en" style="">
<head>
    <meta charset="utf-8">
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        #tv {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>

<!-- TradingView Widget BEGIN -->
<div id="tv"></div>
<script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
<script type="text/javascript">
    new TradingView.widget({
        "container_id"       : "tv",
        "autosize"           : true,
        "interval"           : 60,
        "timezone"           : "Etc/UTC",
        "style"              : "1",
        "enable_publishing"  : false,
        "hide_side_toolbar"  : false,
        "allow_symbol_change": false,
        "show_popup_button"  : true,
        "withdateranges"     : {{bottom}},
        "popup_width"        : {{width}},
        "popup_height"       : {{height}},
        "toolbar_bg"         : "{{bg}}",
        "theme"              : "{{theme}}",
        "symbol"             : "{{symbol}}"
    });
</script>
<!-- TradingView Widget END -->

</body>
</html>